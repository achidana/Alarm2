<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/time_alarm_icon"
        android:layout_width="164dp"
        android:layout_height="166dp"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/time_alarm"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="104dp" />

    <ImageButton
        android:id="@+id/location_alarm_icon"
        android:layout_width="161dp"
        android:layout_height="163dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/time_alarm_icon"
        app:srcCompat="@drawable/location_icon"
        tools:layout_editor_absoluteY="104dp" />

    <ImageButton
        android:id="@+id/group_alarm_icon"
        android:layout_width="183dp"
        android:layout_height="181dp"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/time_alarm_icon"
        app:layout_constraintTop_toBottomOf="@+id/time_alarm_icon"
        app:srcCompat="@drawable/group_alarm" />
</android.support.constraint.ConstraintLayout>
